{
  "compilerOptions": {
    "outDir": "build/dist",
    "target": "es6",
    "lib": ["es2016", "dom"],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "strict": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "webpack"
  ]
}
