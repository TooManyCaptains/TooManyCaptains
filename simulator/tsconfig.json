{
  "compilerOptions": {
    "outDir": "build/dist",
    "target": "es5",
    "baseUrl": ".",
    "lib": ["es2016", "dom"],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "strict": true,
    "allowSyntheticDefaultImports": true

  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "webpack"
  ]
}
